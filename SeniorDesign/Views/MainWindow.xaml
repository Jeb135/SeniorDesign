<Window x:Class="SeniorDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeniorDesign"
        mc:Ignorable="d"
        Title="Underwater Robot"
        WindowState="Maximized" d:DesignWidth="1400" d:DesignHeight="1000">
    <Grid>
        <MediaElement Name="stream" Height="720" Width="1280" Margin="54,10,54,240"></MediaElement>
        <StackPanel Margin="0,750,0,0" Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="10,10,10,10">
                <Button Content="Connect" Command="{Binding ConnectWirelessCommand}" Width="100" Margin="0,5,0,5"/>
                <Button Content="Return to Surface" Command="{Binding ReturnToSurfaceCommand}" Width="100" Margin="0,5,0,5"/>
                <Slider x:Name="ForwardSpeed"  Margin="0, 0, 0, 0" 
                    Width="100" Orientation="Horizontal" HorizontalAlignment="Left" 
                    Value="50" Minimum="0" Maximum="200" 
                    SmallChange="1" LargeChange="10"
                    TickPlacement="BottomRight" TickFrequency="10"/>
                <TextBox Name="ForwardSpeedText" IsReadOnly="True">
                    Forward Speed (%)
                </TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
